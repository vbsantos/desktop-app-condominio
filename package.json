{
  "name": "desktop-app-condominio",
  "version": "0.3.1",
  "description": "Software para gerenciar condomínio",
  "main": "app/index.js",
  "repository": "https://github.com/vbsantos/desktop-app-condominio",
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "vbsantos",
        "repo": "desktop-app-condominio"
      }
    ],
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "author": "Vinícius Bohrer",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist-windows": "electron-builder --win --ia32",
    "dist-linux": "electron-builder --ia32",
    "publish": "electron-builder --win --ia32 -p always"
  },
  "dependencies": {
    "electron-log": "^4.0.3",
    "electron-updater": "^4.2.0",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "electron": "^7.1.10",
    "electron-builder": "^22.2.0"
  }
}
